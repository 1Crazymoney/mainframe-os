{
  "appId": "com.mainframe.launcher",
  "productName": "MainframeOS",
  "artifactName": "${productName}.${ext}",
  "appImage": {
    "systemIntegration": "doNotAsk"
  },
  "linux": {
    "category": "Network",
    "target": ["AppImage", "dir"],
    "icon": "./build/icon.png",
    "extraResources": [
      {
        "from": "./bin/swarm-linux",
        "to": "bin/swarm"
      }
    ]
  },
  "mac": {
    "icon": "./build/icon.png",
    "target": ["dmg", "dir"],
  },
  "dmg": {
    "contents": [{
      "type": "file",
      "path": "build/pkg-scripts/preinstall.command",
      "x": 100,
      "y": 100
    },
      {
        "type": "link",
        "path": "/Applications",
        "x": "400",
        "y": "450"
      }]
  },
  "win": {
    "icon": "./build/icon.png",
    "target": "nsis",
    "extraResources": [
      {
        "from": "./bin/swarm-win.exe",
        "to": "bin/swarm.exe"
      }
    ]
  }
}
