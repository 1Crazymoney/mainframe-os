{
  "appId": "com.mainframe.launcher",
  "productName": "MainframeOS",
  "artifactName": "${productName}.${ext}",
  "appImage": {
    "systemIntegration": "doNotAsk"
  },
  "directories": {
    "buildResources": "build"
  },
  "files": [
    "build/icon/*"
  ],
  "linux": {
    "category": "Network",
    "icon": "build/icon/",
    "target": ["AppImage", "dir"]
  },
  "mac": {
    "icon": "build/icon.icns",
    "target": ["dmg", "dir"]
  },
  "win": {
    "icon": "build/icon.ico",
    "target": "nsis"
  }
}
