{
  "name": "Mainframe",
  "version": "0.1.0",
  "main": "main/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:electron": "electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "build:flow": "flow-copy-source src lib",
    "test:types": "flow check",
    "test": "mocha"
  },
  "electronWebpack": {
    "title": "Mainframe",
    "whiteListedModules": [
      "@mainframe/app-permissions",
      "@mainframe/client",
      "@mainframe/config",
      "@mainframe/toolbox"
    ]
  },
  "dependencies": {
    "@mainframe/app-permissions": "*",
    "@mainframe/client": "*",
    "@mainframe/config": "*",
    "@mainframe/toolbox": "*",
    "electron-util": "^0.9.0",
    "fs-extra": "^7.0.0",
    "react": "^16.4.0",
    "react-art": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-modal": "^3.4.5",
    "react-native-web": "^0.8.0",
    "source-map-support": "^0.5.5"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.47",
    "@babel/preset-flow": "7.0.0-beta.47",
    "@babel/preset-react": "7.0.0-beta.47",
    "@mainframe/utils-id": "^0.1.0",
    "babel": "^6.23.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.4.0",
    "babel-plugin-react-native-web": "^0.8.6",
    "electron": "^2.0.2",
    "electron-builder": "^20.16.0",
    "electron-webpack": "^2.1.2",
    "flow-bin": "^0.77.0",
    "mocha": "^5.2.0",
    "spectron": "^3.8.0",
    "webpack": "^4.14.0"
  }
}
