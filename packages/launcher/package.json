{
  "name": "Mainframe",
  "version": "0.2.0",
  "main": "main/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "npm run compile && electron-builder",
    "electron-builder": "electron-builder",
    "deps:build": "electron-builder install-app-deps",
    "dist:ci": "yarn run compile && yarn run electron-builder --dir",
    "dist:dir": "yarn run dist --dir -c.compression=store -c.mac.identity=null",
    "dist:electron": "electron-builder",
    "build:flow": "flow-copy-source src lib",
    "relay:build": "BABEL_ENV=script node -r @babel/register ./scripts/build-graphql-schema",
    "relay:compile": "relay-compiler --src ./src --schema ./schema.graphql",
    "relay": "yarn run relay:build && yarn run relay:compile",
    "svg": "svgr -d ./src/renderer/UIComponents/Icons ./src/assets/svgs --icon --replace-attr-values \"#D3D3D3=currentColor\"",
    "test:types": "flow check",
    "test": "mocha"
  },
  "electronWebpack": {
    "title": "Mainframe",
    "whiteListedModules": [
      "@mainframe/app-manifest",
      "@mainframe/app-permissions",
      "@mainframe/client",
      "@mainframe/eth",
      "@mainframe/config",
      "@mainframe/toolbox",
      "@morpheus-ui/core",
      "@morpheus-ui/fonts",
      "typeface-ibm-plex-mono"
    ],
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "dependencies": {
    "@erebos/secp256k1": "^0.7.0",
    "@ledgerhq/hw-app-eth": "^4.55.0",
    "@ledgerhq/hw-transport-node-hid": "^4.55.0",
    "@mainframe/app-manifest": "^0.3.0",
    "@mainframe/app-permissions": "^0.3.0",
    "@mainframe/client": "^0.3.0",
    "@mainframe/config": "^0.3.0",
    "@mainframe/eth": "^0.3.0",
    "@mainframe/rpc-electron": "^0.2.0",
    "@mainframe/rpc-handler": "^0.3.0",
    "@mainframe/toolbox": "*",
    "@mainframe/utils-base64": "^0.1.1",
    "@mainframe/utils-crypto": "^0.4.0",
    "@mainframe/utils-id": "^0.1.0",
    "@morpheus-ui/core": "^0.0.41",
    "@morpheus-ui/fonts": "0.0.1",
    "@morpheus-ui/icons": "0.0.16",
    "bip39": "^3.0.1",
    "conf": "^4.0.1",
    "electron-store": "^3.0.0",
    "electron-util": "^0.11.0",
    "env-paths": "^2.2.0",
    "eth-sig-util": "^2.1.2",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-util": "^6.1.0",
    "ethereumjs-wallet": "^0.6.3",
    "fs-extra": "^7.0.1",
    "get-stream": "^5.0.0",
    "graphql": "^14.2.1",
    "graphql-relay": "^0.6.0",
    "gsap": "^2.1.2",
    "keytar": "^4.5.0",
    "leveldown": "^5.0.2",
    "mime": "^2.4.0",
    "nanoid": "^2.0.1",
    "pouchdb-adapter-leveldb": "^7.0.0",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.5",
    "react-art": "^16.8.5",
    "react-blockies": "^1.4.0",
    "react-dom": "^16.8.5",
    "react-modal": "^3.6.1",
    "react-native-web": "^0.10.0",
    "react-relay": "^1.7.0",
