    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@erebos/api-bzz-node": "^0.7.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-react-native-web": "^0.10.0",
    "babel-plugin-relay": "^1.7.0",
    "css-loader": "^2.1.1",
    "electron": "^4.1.1",
    "electron-builder": "^20.39.0",
    "electron-webpack": "^2.6.1",
    "file-loader": "^3.0.1",
    "flow-bin": "^0.97.0",
